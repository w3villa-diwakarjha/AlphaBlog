<h1 class="text-center mt-4"><%= @article.title %></h1>

<div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                    <div class="card-header font-italic">
                        <%= @article.title %>
                    </div>
                    <div class="card-body">
                        <div class="card-text text-left"><%=simple_format(@article.description)%></div>
                        <%= link_to "Edit", edit_article_path(@article.id), class: "btn btn-outline-info"%>
                        <a href="#" class="btn btn-outline-danger">Delete</a>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Created <%= time_ago_in_words(@article.created_at) %></small>,
                        <small>Updated <%= time_ago_in_words(@article.updated_at) %></small>
                    </div>
                </div>
            </div>
        </div>
</div>


<p>
<%= link_to 'create new article', new_article_path %>
</p>